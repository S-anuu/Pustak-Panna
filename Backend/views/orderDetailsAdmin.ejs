<main class="order-details-container">
    <h1>Order Details</h1>
    <div class="order-info">
        <h2>Order ID: <%= order._id %></h2>
        <p><strong>Customer Name:</strong> <%= order.userId.name %></p>
        <p><strong>Email:</strong> <%= order.userId.email %></p>
        <p><strong>Phone:</strong> <%= order.phone %></p>
        <p><strong>Address:</strong> <%= order.address %></p>
    </div>

    <div class="items-info">
        <h3>Books Ordered</h3>
        <ul>
            <% order.items.forEach(item => { %>
                <li>
                    <span class="book-title"><%= item.bookId.title %></span>
                    <span class="item-quantity"> (x<%= item.quantity %>)</span>
                    <span class="item-price"> - Rs. <%= item.price %></span>
                </li>
            <% }) %>
        </ul>
        <div class="summary">
            <p><strong>Total Price:</strong> Rs. <%= order.total %></p>
            <p><strong>Shipping Cost:</strong> Rs. <%= order.shippingCost %></p>
            <p><strong>Discount:</strong> Rs. <%= order.discount %></p>
        </div>
    </div>

    <div class="order-status">
        <h3>Order Status</h3>
        <p><%= order.status %></p>
    </div>

    <div class="back-btn">
        <a href="/admin/orders" class="btn">Back to Orders</a>
    </div>
</main>

<style>
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f7f9fc;
    color: #333;
    margin: 0;
    padding: 0;
}

.order-details-container {
    max-width: 900px;
    margin: 30px auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

h1 {
    text-align: center;
    color: #007bff;
    margin-bottom: 20px;
}

.order-info,
.items-info,
.order-status {
    margin-bottom: 30px;
}

.order-info h2,
.items-info h3,
.order-status h3 {
    color: #333;
}

.order-info p,
.items-info p,
.order-status p {
    font-size: 1.1em;
    line-height: 1.6;
}

.items-info ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.items-info li {
    padding: 10px 0;
    border-bottom: 1px solid #ddd;
    display: flex;
    justify-content: space-between;
}

.book-title {
    font-weight: bold;
}

.item-quantity,
.item-price {
    color: #555;
}

.summary p {
    font-size: 1.2em;
    font-weight: bold;
    margin: 10px 0;
}

.btn {
    background-color: #007bff;
    color: #ffffff;
    padding: 12px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-size: 1em;
    text-align: center;
    display: inline-block;
}

.btn:hover {
    background-color: #0056b3;
}
</style>
