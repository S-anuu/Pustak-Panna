<!-- Conditionally include page-specific stylesheet if defined -->
<% if (typeof pageStyles !== 'undefined') { %>
  <% if (pageStyles === 'Login.css') { %>
    <link rel="stylesheet" href="/css/Login.css">
  <% } else if (pageStyles === 'errors.css') { %>
    <link rel="stylesheet" href="/css/errors.css">
  <% } else if (pageStyles === 'about.css') { %>
    <link rel="stylesheet" href="/css/about.css">
  <% }  else if (pageStyles === 'register.css') { %>
    <link rel="stylesheet" href="/css/register.css">
  <% } else if (pageStyles === 'forgot-password.css') { %>
    <link rel="stylesheet" href="/css/forgot-password.css">
  <% }else if (pageStyles === 'admin-login.css') { %>
    <link rel="stylesheet" href="/css/admin-login.css">
  <% }%> 
<% } %>
