<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize ClipboardJS
        const clipboard = new ClipboardJS('.copy-btn', {
            target: function(trigger) {
                return document.querySelector(trigger.getAttribute('data-target'));
            }
        });

        clipboard.on('success', function(e) {
            // Optionally show a message or animation to indicate the code has been copied
            alert('Coupon code copied to clipboard!');
        });

        clipboard.on('error', function(e) {
            // Optionally show an error message if copying fails
            alert('Failed to copy coupon code.');
        });

        const triviaButton = document.getElementById('show-trivia-btn');
        const triviaContent = document.getElementById('trivia-content');
        const triviaText = document.getElementById('trivia-text');
        const hideTriviaButton = document.getElementById('hide-trivia-btn');

        const triviaArray = [
            "📚 Did you know? The longest novel ever written is 'In Search of Lost Time' by Marcel Proust, which has around 1.2 million words.",
            "🎨 Fun Fact: The world’s smallest book is 'Teeny Ted from Turnip Town,' measuring 0.7mm x 0.7mm.",
            "🚀 Trivia: The famous book 'Don Quixote' was published in two parts, with the first part released in 1605 and the second part in 1615.",
            "💰 Did you know? The most expensive book ever sold is 'The Codex Leicester' by Leonardo da Vinci, which sold for $30.8 million in 1994.",
            "🧙‍♂️ Fun Fact: J.K. Rowling's 'Harry Potter and the Philosopher's Stone' was rejected by 12 publishers before it was finally accepted.",
            "📜📚Books have been around for thousands of years! The oldest known book is the 'Epic of Gilgamesh,' which dates back to around 2100 BC.",
            "📖🔍The longest novel ever written is 'In Search of Lost Time' by Marcel Proust. It has about 1.2 million words and is often cited as the longest novel ever.", 
            "📜🔠The world's largest library is the Library of Congress in Washington, D.C. It holds over 170 million items, including books, manuscripts, maps, and more. ", 
            "🕵️‍♂️📖The famous fictional detective Sherlock Holmes never actually said the phrase 'Elementary, my dear Watson' in Sir Arthur Conan Doyle's original stories. ",
        ];

        triviaButton.addEventListener('click', function() {
            // Randomly select a trivia fact
            const randomIndex = Math.floor(Math.random() * triviaArray.length);
            triviaText.textContent = triviaArray[randomIndex];
            triviaContent.classList.remove('trivia-hidden'); // Show the trivia content
        });

        hideTriviaButton.addEventListener('click', function() {
            triviaContent.classList.add('trivia-hidden'); // Hide the trivia content
        });
    });
</script>


