<main>
    <section class="best-sellers section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h1><%= title %></h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <% if (bestSellers.length > 0) { %>
                    <% bestSellers.forEach(book => { %>
                        <div class="col-lg-4 col-md-6 col-12">
                            <div class="single-product">
                                <div class="product-img">
                                    <a href="/product-details/<%= book._id %>">
                                        <img class="default-img" src="<%= book.imageURL %>" alt="<%= book.title %>">
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h3><a href="/product-details/<%= book._id %>"><%= book.title %></a></h3>
                                    <p class="author"><strong>Author:</strong> <%= book.author %></p>
                                    <p class="price">
                                        <% if (book.discountPrice) { %>
                                            <span class="old">Rs.<%= book.price %></span>
                                            <span>Rs.<%= book.discountPrice %></span>
                                        <% } else { %>
                                            <span>Rs.<%= book.price %></span>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <p>No Best Sellers at the moment.</p>
                    </div>
                <% } %>
            </div>

            <!-- Pagination Controls -->
            <div class="pagination">
                <% if (totalPages > 1) { %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <a href="/best-sellers?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                    <% } %>
                <% } %>
            </div>
        </div>
    </section>
</main>

<style>
    .best-sellers {
        padding: 40px 0;
    }
    .section-title {
        text-align: center;
        margin-bottom: 30px;
    }
    .section-title h1 {
        font-size: 2em;
        margin: 0;
    }
    .single-product {
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        margin-bottom: 20px;
        text-align: center;
        background-color: #fff;
    }
    .product-img {
        position: relative;
    }
    .product-img a img {
        width: 100%;
        height: auto;
        display: block;
    }
    .product-content {
        padding: 15px;
    }
    .product-content h3 {
        font-size: 1.2em;
        margin: 10px 0;
    }
    .product-content .author {
        font-size: 0.9em;
        color: #666;
        margin: 10px 0;
    }
    .product-content .price {
        font-size: 1.1em;
        font-weight: bold;
    }
    .product-content .price .old {
        text-decoration: line-through;
        color: #888;
        margin-right: 5px;
    }
    .pagination {
        margin: 20px 0;
        text-align: center;
    }
    .pagination a {
        margin: 0 5px;
        padding: 10px;
        border: 1px solid #ddd;
        text-decoration: none;
        color: #333;
        border-radius: 3px;
    }
    .pagination a.active {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }
</style>
