<main>
    <section class="books-list">
        
        <!-- Used Books Section -->
        <h1>Used Books</h1>
        <% const usedBooks = books.filter(book => book.isUsed); %>
        <% const usedBooksToShow = usedBooks.slice((currentPage - 1) * pageSize, currentPage * pageSize); %>
        <% if (usedBooksToShow.length > 0) { %>
            <div class="book-grid">
                <% usedBooksToShow.forEach(book => { %>
                    <div class="book-card">
                        <img src="<%= book.imageURL %>" alt="<%= book.title %>" class="book-cover">
                        <h2><%= book.title %></h2>
                        <p><strong>Author:</strong> <%= book.author %></p>
                        <p><strong>Category:</strong> <%= book.category %></p>
                        <p><strong>Price:</strong> Rs. <%= book.price %></p>

                        <p><strong>Description:</strong> <span class="short-description"><%= book.description %></span></p>

                        <p><strong>Condition:</strong> <%= book.condition %></p>

                        <a href="/admin/edit-book/<%= book._id %>" class="btn btn-box">Edit</a>
                        <a href="javascript:void(0)" class="btn btn-danger" onclick="confirmDelete('<%= book._id %>')">Delete</a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>No used books found.</p>
        <% } %>

        <!-- Pagination Controls -->
        <div class="pagination">
            <% if (totalPages > 1) { %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/admin/books?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                <% } %>
            <% } %>
        </div>

        <!-- New Books Section -->
        <h1>New Books</h1>
        <% const newBooks = books.filter(book => !book.isUsed); %>
        <% if (newBooks.length > 0) { %>
            <div class="book-grid">
                <% newBooks.forEach(book => { %>
                    <div class="book-card">
                        <img src="<%= book.imageURL %>" alt="<%= book.title %>" class="book-cover">
                        <h2><%= book.title %></h2>
                        <p><strong>Author:</strong> <%= book.author %></p>
                        <p><strong>Category:</strong> <%= book.category %></p>
                        <p><strong>Price:</strong> Rs. <%= book.price %></p>
                        <p><strong>Description:</strong> <span class="short-description"><%= book.description %></span></p>
                       
                        <a href="/admin/edit-book/<%= book._id %>" class="btn btn-box">Edit</a>
                        <a href="javascript:void(0)" class="btn btn-danger" onclick="confirmDelete('<%= book._id %>')">Delete</a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>No new books found.</p>
        <% } %>

        <a href="/admin/add-book" class="btn btn-primary fixed-button">Add Book</a>
    </section>
</main>

<script src="path/to/sweetalert2.all.min.js"></script>
<script>
    function confirmDelete(bookId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/delete/${bookId}`;
            }
        });
    }

    document.querySelectorAll('.read-more').forEach(button => {
        button.addEventListener('click', function() {
            const description = this.previousElementSibling;
            if (description.classList.contains('short-description')) {
                description.classList.remove('short-description');
                this.textContent = 'Read Less';
            } else {
                description.classList.add('short-description');
                this.textContent = 'Read More';
            }
        });
    });

    // Adjust Add Book Button Position
    window.addEventListener('scroll', function() {
        const addButton = document.querySelector('.fixed-button');
        const footer = document.getElementById('footer');
        const footerTop = footer.getBoundingClientRect().top;
        const windowHeight = window.innerHeight;

        if (footerTop <= windowHeight) {
            addButton.style.position = 'absolute';
            addButton.style.top = (window.pageYOffset + footerTop - addButton.offsetHeight - 20) + 'px';
        } else {
            addButton.style.position = 'fixed';
            addButton.style.top = '20px';
        }
    });
</script>

<style>

