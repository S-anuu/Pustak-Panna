<main>
    <section class="product-details section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12">
                    <!-- Product Images -->
                    <div class="product-images">
                        <div class="main-image">
                            <img src="<%= book.imageURL %>" alt="<%= book.title %>">
                        </div>
                        <!-- Add any additional images here if available -->
                    </div>
                </div>
                <div class="col-lg-8 col-md-12">
                    <!-- Product Details -->
                    <div class="product-info">
                        <h1 class="product-title" style="color:white;"><%= book.title %></h1>
                        <p class="author"><strong  style="color:rgb(239, 108, 20)">Author :</strong> <%= book.author %></p>
                        <p class="genre"><strong  style="color:rgb(239, 108, 20)">Genre :</strong> <%= book.category %></p>
                        <p class="price">
                            <% if (book.discountPrice) { %>
                                <span class="old">Rs.<%= book.price %></span>
                                <span class="discounted">Rs.<%= book.discountPrice %></span>
                            <% } else { %>
                                <span>Rs.<%= book.price %></span>
                            <% } %>
                        </p>
                        <p class="description"><%= book.description %></p>
                        
                        <!-- Buttons -->
                        <div class="button-group">
                            <a href="/cart/add/<%= book._id %>" class="btn btn-primary">Add to Cart</a>
                            <a href="/checkout/<%= book._id %>" class="btn btn-secondary">Buy Now</a>
                        </div>
                        
                        <!-- Rating Section -->
                        <div class="rating-section">
                            <h4  style="color:rgb(239, 108, 20)">Rating</h4>
                            <div class="rating">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="fa <% if (book.rating >= i) { %>fa-star<% } else { %>fa-star-o<% } %>"></i>
                                <% } %>
                                <span  style="color:#fff"><%= book.rating || 'No rating yet' %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reviews Section -->
            <section class="reviews section">
                <div class="row">
                    <div class="col-12">
                        <h3 style="color:rgb(239, 108, 20)">Reviews</h3>
                        <% if (reviews.length > 0) { %>
                            <% reviews.forEach(review => { %>
                                <div class="review">
                                    <div class="review-header">
                                        <strong><%= review.userName %></strong>
                                        <span class="review-date"><%= new Date(review.date).toLocaleDateString() %></span>
                                    </div>
                                    <div class="review-body">
                                        <p><%= review.comment %></p>
                                        <div class="review-rating">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fa <% if (review.rating >= i) { %>fa-star<% } else { %>fa-star-o<% } %>"></i>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p style="color:#fff">No reviews yet. Be the first to review!</p>
                        <% } %>
                    </div>
                </div>
            </section>
        </div>
    </section>
</main>

<style>
    .product-details {
        padding: 40px 0;
    }
    .product-title {
        font-size: 2em;
        margin-bottom: 15px;
    }
    .product-info .author,
    .product-info .genre,
    .product-info .price,
    .product-info .description {
        margin-bottom: 15px;
    }
    .product-info .price .old {
        text-decoration: line-through;
        color: #888;
        margin-right: 10px;
    }
    .product-info .price .discounted {
        font-size: 1.5em;
        color: #007bff;
    }
    .button-group {
        margin-top: 20px;
    }
    .button-group .btn {
        margin-right: 10px;
    }
    .rating-section {
        margin-top: 20px;
    }
    .rating-section .rating {
        font-size: 1.2em;
        color: #f39c12;
    }
    .reviews {
        margin-top: 40px;
    }
    .review {
        border-bottom: 1px solid #ddd;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }
    .review-header {
        font-weight: bold;
        margin-bottom: 5px;
    }
    .review-date {
        font-size: 0.9em;
        color: #888;
    }
    .review-body {
        margin-top: 10px;
    }
    .review-rating {
        font-size: 1.2em;
        color: #f39c12;
    }
    .fa-star {
        color: #f39c12;
    }
    .fa-star-o {
        color: #ccc;
    }
</style>
